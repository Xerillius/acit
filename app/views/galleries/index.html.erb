<%= render 'carousel' %>

<br>

<div class="container-fluid">
  <% if current_user.try(:admin) %>
    <%= link_to 'New Picture', new_gallery_path, :class => "btn", :id => "btn" %>
  <% end %>
</div>

<br>

<div class="container-fluid">
  <div class="row">
    <% @galleries.reverse.each do |gallery| %>
      <div class="col-xs-12 col-sm-4 col-md-3 col-lg-2" id="bp_show">
        <div class="panel" id="gallery_pan">
          <% if current_user.try(:admin) %>
            <div class="panel-heading">
              <%= link_to 'Remove', gallery, :class => "btn", :id => "btn", method: :delete, data: {confirm: 'Are you sure?'} %>
            </div>
          <% end %>
          <div class="panel-body">
            <%= link_to (image_tag (gallery.picture_url)), gallery.picture_url %>
          </div>
          <div class="panel-footer">
            <%= gallery.content %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>