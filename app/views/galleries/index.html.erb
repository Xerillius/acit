<%= render 'carousel' %>

<br>

<div class="container-fluid">
  <% if current_user.try(:admin) %>
    <%= link_to 'New Picture', new_gallery_path, :class => "btn", :id => "btn" %>
  <% end %>
</div>

<br>

<div class="container-fluid">
  <div class="row">
    <% @galleries.reverse.each do |gallery| %>
   		<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3" id="bp_show">
	      <%= render :partial => 'galleries/show', :locals => {:gallery => gallery } %>
	    </div>
    <% end %>
  </div>
</div>