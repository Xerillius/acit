<div class="panel">
	<% if current_user.try(:admin) %>
		<div class="panel-heading">
			<%= link_to 'Remove', gallery, :class => "btn", :id => "btn", method: :delete, data: {confirm: 'Are you sure?'} %>
		</div>
	<% end %>
	<div class="panel-body">
		<%= link_to (image_tag(gallery.picture_url, :alt => '')), gallery.picture_url %>
	</div>
	<div class="panel-footer">
		<%= gallery.content %>
	</div>
</div>