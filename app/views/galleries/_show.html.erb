<div class="col-xs-12 col-sm-8 col-sm-offset-2" id="bp_show">
	<div class="panel">
		<div class="panel-heading">
			<% if current_user.try(:admin) %>
				<%= link_to 'Remove', gallery, :class => "btn", :id => "btn", method: :delete, data: {confirm: 'Are you sure?'} %>
			<% end %>
		</div>
		<div class="panel-body">
			<%= link_to (image_tag(gallery.picture_url, :alt => '')), gallery.picture_url %>
		</div>
		<div class="panel-footer">
			<%= gallery.content %>
		</div>
	</div>
</div>